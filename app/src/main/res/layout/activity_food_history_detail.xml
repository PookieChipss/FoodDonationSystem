<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEEFF"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/historyTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Donation History"
        android:textColor="#031530"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Scrollable Container for Details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Food Name Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#031530"
                android:fontFamily="@font/poppins_regular" />
            <TextView
                android:id="@+id/foodNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Food"
                android:textSize="18sp"
                android:textColor="#031530"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp" />

            <!-- Category Section (non-editable) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#031530"
                android:fontFamily="@font/poppins_regular" />
            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Category"
                android:textSize="18sp"
                android:textColor="#031530"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp" />

            <!-- Donation Status Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation Status:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#031530"
                android:fontFamily="@font/poppins_regular" />
            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="16sp"
                android:textColor="#FF0000"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp" />

            <!-- Location Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#031530"
                android:fontFamily="@font/poppins_regular" />
            <EditText
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter location"
                android:textSize="16sp"
                android:background="@drawable/rounded_container"
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:textColor="#031530"
                android:layout_marginBottom="16dp" />

            <!-- Quantity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#031530"
                android:fontFamily="@font/poppins_regular" />
            <EditText
                android:id="@+id/quantityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter quantity"
                android:inputType="number"
                android:textSize="16sp"
                android:background="@drawable/rounded_container"
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:textColor="#031530"
                android:layout_marginBottom="16dp" />

            <!-- Note Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#031530"
                android:fontFamily="@font/poppins_regular" />
            <EditText
                android:id="@+id/noteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter note (optional)"
                android:textSize="16sp"
                android:background="@drawable/rounded_container"
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:textColor="#031530" />
        </LinearLayout>
    </ScrollView>

    <!-- Footer Buttons at Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#EDEEFF"
            android:drawableLeft="@drawable/ic_back"
            android:drawablePadding="8dp"
            android:textSize="20sp"
            android:background="@drawable/curved_button"
            android:fontFamily="@font/poppins_bold"
            android:padding="16dp" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <!-- Save Changes Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#EDEEFF"
            android:drawableLeft="@drawable/ic_save"
            android:drawablePadding="8dp"
            android:textSize="20sp"
            android:background="@drawable/curved_button"
            android:fontFamily="@font/poppins_bold"
            android:padding="16dp" />

    </LinearLayout>
</LinearLayout>
